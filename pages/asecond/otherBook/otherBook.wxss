/*  info  */

page {
  width: 100%;
  height: 100%;
}

.total {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
}

.top {
  background-color: rgba(238, 229, 222, 0.2);
  height: 25%;
  width: 100%;
  border-bottom: solid 2px #efefef;
  display: flex;
  flex-direction: row;
  align-items: flex-end;
}

.pic {
  width: 20%;
  height: 200rpx;
  margin-left: 20rpx;
  margin-right: 30rpx;
  margin-bottom: 20rpx;
}

.content {
  flex: 1;
}

.borrowBtn {
  flex: 1;
}

.borrowState {
  margin-bottom: 20rpx;
  border: 1px solid #dedede;
  width: 200rpx;
  height: 65rpx;
  font-size: 30rpx;
  vertical-align: middle;
  text-align: center;
  line-height: 25px;
  border-radius: 3px;
  background-color: #ebebeb;
}

.borrowState::after {
  border: none;
}

.title {
  display: block;
  margin-bottom: 65rpx;
  font-size: 30rpx;
}

.author {
  display: block;
  font-size: 25rpx;
  color: black;
  margin-bottom: 20rpx;
}

.body {
  display: flex;
  flex-direction: column;
  height: 75%;
  width: 100%;
}

.brief {
  flex:1;
  border-bottom: 1px solid #efefef;
  padding: 0 20rpx 0 20rpx;
}

.briefInfo {
  line-height: 44rpx;
  margin-top: 20rpx;
}

.briefInfo .content {
  letter-spacing: 5rpx;
  font-size: 25rpx;
  color: #8a8a8a;
}

.hide {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
  text-overflow: ellipsis;
}

.show {
}

.more {
  margin-top: 10rpx;
  text-align: center;
}

.state {
  width: 92rpx;
}

.close {
  font-size: 25rpx;
  color: #969696;
  float: right;
}

.type {
   flex:1;
   padding: 0 20rpx 0 20rpx;
  height: 200rpx;
  border-bottom: 1px solid #efefef;
}

.typeone {
  border: solid 1px #ccc;
  margin-left: 30rpx;
  font-size: 27rpx;
  border-radius: 6rpx;
  line-height: 35rpx;
  padding: 10rpx 20rpx 20rpx 20rpx;
}

.typeone text {
  font-size: 27rpx;
  color: #838b8b;
}

.type .name {
  height: 20rpx;
  font-size: 27rpx;
  color: #a8a8a8;
}

.typeall {
  margin-left: 30rpx;
  margin-top: 20rpx;
  height: 150rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-items: center;
}

.moreinfo {
 padding: 10rpx 20rpx 20rpx 20rpx;
}

.moreinfo .name {
  height: 20rpx;
  font-size: 27rpx;
  color: #a8a8a8;
}

.moreinfo .all {

  margin-top: 20rpx;
}
.one {
  margin-bottom: -10rpx;
}

.one text {
  font-size: 27rpx;
  color: #838b8b;
}

.footer {
  background-color:rgba(238, 229, 222, 0.2);
  border-top:1px solid #efefef;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 10%;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.user {
  padding-left: 40rpx;
  flex: 2;
  border-right: 1px solid #efefef;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.user .nickname{
  font-size: 32rpx;
  color: #BEBEBE;
  margin-left: 20rpx;
  padding-top: 10rpx;
  flex:1;
}

.borrowstatus {
  flex: 1;
  text-align: center;
}


.avatar{
    height: 75rpx;
    width: 75rpx;
    border-radius: 25px;
}


.myscroll{
  height:85%;
}




