
Page{
  width: 100%;
  height: 100%;
}
.giftListView {
  width: 100%;
  background-color: #F5F5F5;
  height: 100%;
  padding-bottom: 20rpx;
  padding-top: 20rpx ;
}
/* cell */
.item {
  display: flex;
  flex-direction: row;
  align-items:center;
  border-radius: 10rpx;
  background-color: white;
  width: 90%;
  margin: 0 auto;
  height: 200rpx;
  border: 1px solid #dadada;
  margin-bottom:15rpx;
  padding: 20rpx 10rpx 20rpx 20rpx;
}

.iconImageView {
  
 margin-top: 10rpx;
}
.iconImage {
  box-shadow: 0px 0px 3px rgba(0, 0, 0, 0.3);
  width: 55px;
  height: 83px;
}

.bookView {
  flex: 3;
  width:200px;

}
.bookNameView{
  position: relative;
  top:-5rpx;
  left:10px;
  width: 170rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.bookNameText {
    width: 300rpx;
  color: grey;
  font-size: 30rpx;
}
.bookAuthorView{
  position: relative;
  bottom: -35rpx;
  left:10px;
  width: 400rpx;
  white-space: nowrap;
  overflow: hidden;
  
 
}

.bookAuthorText {
  color: #969696;
  font-size: 25rpx;
  white-space: nowrap;
  text-overflow:ellipsis;
}

.bookTimeView{
  left:10px;
  position: relative;
  bottom: -20rpx;
 
}

.bookTimeText {
  color: #969696;
  font-size: 25rpx;
  white-space: nowrap;
  text-overflow:ellipsis;
}

.typeView {
  top:-80rpx;
  right: -20rpx;
  height: 50rpx;
  width: 200rpx;
  position: relative;
}
.typeText {
  color: rgb(230, 204, 140);
  font-size: 30rpx;
}



.cu-list.menu-avatar>.cu-itemm {
	position: relative;
	display: flex;
	padding-right: 10rpx;
	height: 200rpx;
	background-color: var(--white);
	justify-content: flex-end;
	align-items: center
}

.cu-list.menu-avatar>.cu-itemm>.cu-avatar {
	position: absolute;
	left: 30rpx
}

.cu-list.menu-avatar>.cu-itemm .flex .text-cut {
	max-width: 510rpx
}

.cu-list.menu-avatar>.cu-itemm .content {
	position: absolute;
	left: 180rpx;
	width: calc(100% - 130rpx - 60rpx - 120rpx - 20rpx);
	line-height: 1.6em;
  padding: 10rpx 0 0 0;
  height: 160rpx;
}

.cu-avatar.lgm {
	width: 130rpx;
	height: 166rpx;
	font-size: 2em;
}
