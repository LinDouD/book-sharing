<!--一登陆授权后根据openid 加载-->
<view class="scontainer">
  <!-- header -->
  <view class="header box-shadow">
    <view class="sortView" bindtap="translateSort">
      <icon class="iconfont icon-zhiding"></icon>
      <view>{{sortName}}</view>
    </view>
    <!-- 筛选的动画 -->
    <view class="set-layer  {{isRuleTrue?'isRuleShow':'isRuleHide'}}" animation="{{animation}}">
      <view class='set-layer-white-space' bindtap='setHideSet'>
      </view>
      <view class="setfloat ">
        <view class="bubble box-shadow">

          <view class="li">
            <view class="licon">
            <view style="font-size:40rpx;">
            <text class="cuIcon-sort lg text-black"></text>
            </view>
               
            </view>
            <view>批量管理</view>
          </view>
          <view class="li">
            <view class="licon">
             <view style="font-size:40rpx;">
            <text class="cuIcon-order lg text-black"></text>
            </view>
            </view>
            <view catchtap="sortByTime">更新时间排序</view>
          </view>
          <view class="li" wx:if="{{!isList}}" catchtap="changeList">
            <view class="licon">
             <view style="font-size:40rpx;">
            <text class="cuIcon-list lg text-black"></text>
            </view>
            </view>
            <view>列表模式</view>
          </view>
          <view class="li" wx:else catchtap="changeList">
            <view class="licon">
              <view style="font-size:40rpx;">
            <text class="cuIcon-circle lg text-black"></text>
            </view>
            </view>
            <view>图强模式</view>
          </view>
        </view>
      </view>
    </view>
    <!-- 设置的动画 -->
    <view class="set-layer {{isSortTrue?'isRuleShow':'isRuleHide'}}">
      <view class='set-layer-white-space' bindtap='sethideSort'></view>
      <view class="float ">
        <view class="animation-element" animation="{{animationSort}}">
          <view class='use'>
            <view class='iconuse'>类别</view>
            <ul class="useage" wx:for="{{cat_list}}" wx:key="{{catgId}}" wx:for-item='item'>

              <li catchtap="tryDriver" id="{{item.catgId}}" data-type="0" class="{{bCatgIdTemp==item.catgId?'click':''}}">{{item.catgName}}</li>
            </ul>

          </view>
        </view>
      </view>
    </view>
    <!-- 搜索 -->
    <view class='page_row' bindtap="suo">
      <view class="search_arr">
        <icon class="searchcion" size='20' type='search'></icon>
        <input class="" disabled placeholder="请输入关键字" value="{{searchValue}}" />
      </view>
      <view class='sousuo'>搜索</view>
    </view>
    <!-- 设置 -->
    <view class="section" bindtap="translate">
      <icon class="iconfont icon-fenleiorguangchangorqita"></icon>
    </view>
  </view>

  <!-- header end -->

  <!-- body -->

  <scroll-view scroll-y="true" style="height: {{height}}rpx" wx:if='{{exist}}' class="scrollView">

    <view class='box' wx:if="{{!isList}}">
      <view wx:for="{{list}}" wx:key="{{isbn}}" id='{{item.isbn}}' bindtap="goToDetailPage" data-count="{{item.count}}" data-type="{{item.type}}" data-ownerid="{{item.ownerId}}" data-bid="{{item.id}}"  class='book'>

        <image src="{{item.picPath}}" mode="scaleToFill" class="box-shadow"></image>
        <view class='font-lv3  ellipsis-2row'>
          {{item.bookName}}
        </view>
      </view>
      <view wx:if="{{emptyView}}" class='book text-muted'>
      </view>
    </view>
    <view class='box' wx:else>
      <view wx:for="{{list}}" wx:key="{{isbn}}" id="{{item.isbn}}" bindtap="goToDetailPage" data-count="{{item.count}}" data-type="{{item.type}}" data-ownerid="{{item.ownerId}}" data-bid="{{item.id}}"  class='booklist'>
        <image src="{{item.picPath}} " mode="scaleToFill "></image>
        <view class="bookView ">
          <view class='font-lv3  ellipsis-2row bookNameView'>
            {{item.bookName}}
          </view>
          <view class='font-lv4  ellipsis-2row authorView'>
            {{item.author}}
          </view>
        </view>
        <view  wx:if="{{!item.type}} " class="listBorrwo ">借阅</view>
      </view>
    </view>
  </scroll-view>


  <!-- body -->



</view>