/* pages/shelf/shelf.wxss */

page{
    width: 100%;
    height: 100%;
}
.nav {
    height: 80rpx;
    width: 85%;
    box-sizing: border-box;
    overflow: hidden;
    line-height: 80rpx;
    background: #f7f7f7;
    font-size: 16px;
    white-space: nowrap;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 99;  
    
}
.nav-item {
    width: 20%;
    display: inline-block;
    text-align: center;
}
.nav-item.active{
    color: #2f65bb;
}

.tab-content{
    overflow-y: scroll;
      
    
}


/*  时间/字母  */
.section {
    height: 80rpx;
    width: 20%;
    box-sizing: border-box;
    overflow: hidden;
    line-height: 80rpx;
    background: #fae5e5;
    font-size: 16px;
    white-space: nowrap;
    position: fixed;
    top: 0;
    left: 85%;
    z-index: 99;
    text-align: center;
    margin-left: -20rpx;
    
    
}

/*书籍*/
.box{
  margin-top: 30rpx;
  margin-right: 20rpx;
  margin-left: 20rpx;
  display: flex;
  justify-content: space-between; 
  flex-direction: row;
  flex-wrap: wrap;
  align-content: flex-start;
  
}
.box .book{
  width:30%;
  margin-bottom: 40rpx;
  color: #666;
   
}

.book image{
  width: 100%;
   height: 300rpx;
}
.header{
  border: 1px red solid;
  margin-bottom: 70rpx;
}

.scontainer{
  width: 100%;
  height: 100%;
}


.swiperPosition{
  position: fixed;
  bottom: 10rpx;
  left: 0;
  width:100%;
}