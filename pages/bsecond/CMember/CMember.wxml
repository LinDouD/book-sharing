<!--pages/bsecond/CMember/CMember.wxml-->
<view class="con">
  <view class="cen">
    <image style="width:140px;height:140px;" src='{{picPath}}'></image>
    <view style="width:20px;"></view>
    <view class="wenzi">
      <text>{{bcName}}</text>
      <text class='text-muted ellipsis-3row desc'>{{createTime}}</text>
      <text class='text-muted ellipsis-3row desc'>{{intro}}</text>
      <button class='create-button'>编辑资料</button>
    </view>
  </view>
</view>

<view class="swiper-tab">
    <view class="swiper-tab-list {{currentTab==0 ? 'on' : ''}}" data-current="0" bindtap="swichNav">成员</view>
    <view class="swiper-tab-list {{currentTab==1 ? 'on' : ''}}" data-current="1" bindtap="swichNav">帖子</view>
    <view class="swiper-tab-list {{currentTab==2 ? 'on' : ''}}" data-current="2" bindtap="swichNav">书架</view>
</view>

<swiper current="{{currentTab}}" class="swiper-box" duration="300" style="height:{{winHeight - 31}}px" bindchange="bindChange">  
 <!-- 成员 -->  
    <swiper-item>  
      <view class='panel base-padding base-margin-bottom cate-data'>
  <view class='panel-body'  >
      <view class='row' wx:for="{{member}}" wx:for-index="idx" wx:key='bcMemId' wx:for-item="item" id="{{item.memberId}}">
        <view class='row-left'>
          <navigator  url='/pages/bsecond/CMember/CMember'>
            <image mode='widthFix' class='box-shadow' src="{{item.userInf.avatarUrl}}"/>
          </navigator>
        </view>
        <view class='row-right'>
        <view style="height:20px;"></view>
          <navigator  url='/pages/bsecond/CMember/CMember' class='ellipsis-1row font-lv2'>{{item.userInf.nickName}}</navigator>
    
          <view class='text-muted ellipsis-3row'>他酷到没有签名。
          </view>
        </view>
      </view>
      
</view>
</view>
    </swiper-item>  
    <!-- 帖子 -->  
    <swiper-item>  
      <view class='panel base-padding base-margin-bottom cate-data'>
  <view class='panel-body'>
      <view class='row' wx:for="{{post}}" wx:for-index="idx" wx:key='postId' wx:for-item="item" id="{{item.postId}}">
        <view class='row-right'>
        <view style="height:20px;"></view>
          <navigator  url='/pages/bsecond/CMember/CMember' class='ellipsis-1row font-lv2'>{{item.title}}</navigator>
          <view class='text-muted ellipsis-3row'>{{item.userInf.nickName}} 发表于{{item.pubTime}}
          </view>
        </view>
      </view>
      </view>
      </view>
    </swiper-item>  
    <!-- 书架 -->  
    <swiper-item>  
      <view class='panel base-padding base-margin-bottom cate-data'>
  <view class='panel-body'>
      <view class='row' wx:for="{{shelf.catg_book_list}}" wx:for-index="idx" wx:key='isbn' wx:for-item="item" id="{{item.isbn}}">
        <view class='row-left'>
          <navigator  url='/pages/bsecond/CMember/CMember'>
            <image mode='widthFix' class='box-shadow' src='{{item.picPath}}'/>
          </navigator>
        </view>
        <view class='row-right'>
        <view style="height:20px;"></view>
          <navigator  url='/pages/bsecond/CMember/CMember' class='ellipsis-1row font-lv2'>{{item.bookName}}</navigator>
    
          <view class='text-muted ellipsis-3row'>{{item.briefIntro}}
          </view>
        </view>
      </view>
      </view>
      </view>
    </swiper-item>  
</swiper>
