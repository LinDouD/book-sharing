.add {
  position: fixed;
  top:5rpx;
  right: 10rpx;
  width: 40px;
  height: 40px;
  color: #ccc;
  transition: color .25s;
 
}

.add::before{
  content: '';
  position: absolute;
  left: 50%;
  top: 50%;
  width: 25px;
  margin-left: -18px;
  margin-top: -4px;
  border-top: 2px solid;
}
.add::after {
 content: '';
 position: absolute;
 left: 50%;
 top: 50%;
 height: 25px;
 margin-left: -6px;
 margin-top: -15px;
 border-left: 2px solid;
}

.add:hover {
  color: blue;
}

