/* pages/asecond/BDself/BDself.wxss */

page {
  width: 100%;
  height: 100%;
}

.total {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  background-color: #f5f5f5;
}

.top {
  background-color: white;
  height: 25%;
  width: 100%;
  border-bottom: solid 2px #efefef;
  display: flex;
  flex-direction: row;
  align-items: flex-end;
  z-index: 99;
}

.pic {
  width: 20%;
  height: 200rpx;
  margin-left: 20rpx;
  margin-right: 30rpx;
  margin-bottom: 20rpx;
}

.content {
  flex: 1;
}

.borrowBtn {
  flex: 1;
}

.borrowState {
  margin-bottom: 20rpx;
  border: 1px solid #dedede;
  width: 200rpx;
  height: 65rpx;
  font-size: 30rpx;
  vertical-align: middle;
  text-align: center;
  line-height: 25px;
  border-radius: 3px;
  background-color: #ebebeb;
}

.borrowState::after {
  border: none;
}

.title {
  display: block;
  margin-bottom: 100rpx;
  font-size: 30rpx;
}

.titleView {
  color: grey;
}

.author {
  display: block;
  font-size: 25rpx;
  margin-bottom: 20rpx;
}

.authorView {

  width:250rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  color: #a9a9a9;
}

.body {
  margin-top: 20rpx;
  background-color: white;
  z-index: 99;
  display: flex;
  flex-direction: column;
  height: 75%;
  width: 100%;
}

.brief {
  flex: 1;
  border-bottom: 1px solid #efefef;
  padding: 20rpx;
}

.briefInfo {
  line-height: 44rpx;
  margin-top: 0rpx;
}

.briefInfo .content {
  letter-spacing: 5rpx;
  font-size: 25rpx;
  color: #8a8a8a;
}

.hide {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
  text-overflow: ellipsis;
}

.show {
}

.more {
  margin-top: 10rpx;
  text-align: center;
}

.state {
  width: 92rpx;
}

.close {
  font-size: 25rpx;
  color: #969696;
  float: right;
}

.type {
  flex: 1;
  padding: 20rpx;
  height: 200rpx;
  border-bottom: 1px solid #efefef;
}

.typeone {
  margin-bottom: 30rpx;

  border: solid 1px #ccc;
  margin-left: 20rpx;
  font-size: 27rpx;
  border-radius: 6rpx;
  line-height: 35rpx;
  padding: 10rpx 20rpx 20rpx 20rpx;
}

.typeone text {
  font-size: 27rpx;
  color: #838b8b;
}

.type .name {
  height: 20rpx;
  font-size: 27rpx;
  color:black;
  margin-left: 10rpx;

}

.typeall {
  margin-left: 30rpx;
  margin-top: 0rpx;
  height: 150rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-items: center;
}

.moreinfo {
  padding: 20rpx;
}

.moreinfo .name {
   margin-left: 10rpx;
  height: 20rpx;
  font-size: 27rpx;
  color: black;
  
}

.moreinfo .all {
 
  margin-top: 20rpx;
  margin-left:50rpx;
}

.one {
  margin-bottom: -10rpx;
  line-height: 60rpx;

}

.one text {
  font-size: 27rpx;
  color: #838b8b;
}

.footer {
  background-color: white;
  border-top: 1px solid #efefef;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 50px;
}

.footerView {
  display: flex;
  flex-direction: row;
  padding-left: 10rpx;
  padding-right: 10rpx;
  justify-content: space-around;
}

.userView {
  border-bottom: 1px solid #efefef;
  width: 100%;
  height: 40px;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 15rpx 0 15rpx 0 ;
  background-color: white;
}

.deleteView {
  flex: 1;

  height: 30px;
}

.checkView {
  height: 30px;
  flex: 1;
}

.deleteBtn {
    font-size: 35rpx;
  margin-top: 20rpx;
  border-radius: 10rpx;
  color: grey;
  background: none;
  line-height: 30px;
  margin-right: 20rpx;
}


.deleteBtn::after {
  border-color: #a9a9a9;
  
}

.checkBtn {
    font-size: 35rpx;
  margin-top: 20rpx;
  border-radius: 10rpx;
  color: grey;
  line-height: 30px;
  background: none;
}

.checkBtn::after {
  border-color: #a9a9a9;
}

.user {
  padding-left: 40rpx;
  flex: 2;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.user .nickname {
  font-size: 32rpx;
  color: #bebebe;
  margin-left: 20rpx;
  padding-top: 10rpx;
 
  flex: 1;
}
.brief .name{
   margin-left: 10rpx;
}

.borrowstatus {
  flex: 1;
  text-align: center;
}

.body-view {
}

.avatar {
  height: 75rpx;
  width: 75rpx;
  border-radius: 25px;
}

.myscroll {
  height: 85%;
  padding: 20rpx;

}




