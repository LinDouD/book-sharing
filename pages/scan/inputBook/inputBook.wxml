
<form >
	<view class="cu-form-group margin-top">
		<view class="title">书籍名称</view>
		<input placeholder="不能为空" bindinput="bookNameInput"></input>
	</view>
	<view class="cu-form-group">
		<view class="title">isbn</view>
		<input placeholder="不能为空"  bindinput="isbnInput"></input>
	</view>
	<view class="cu-form-group">
		<view class="title">作者</view>
		<input placeholder="不能为空"  bindinput="authorInput"></input>
	</view>
  	<view class="cu-form-group">
		<view class="title">出版社</view>
		<input placeholder="不能为空"  bindinput="publisherInput"></input>
	</view>
  	<view class="cu-form-group">
		<view class="title">数量</view>
		<input placeholder="" type="number"   bindinput="numberInput" value="1"></input>
	</view>
  	<view class="cu-form-group">
		<view class="title">出版时间</view>
		<input placeholder="格式:2019-10-10"  bindinput="pubTimeInput"></input>
	</view>
  	<view class="cu-form-group">
		<view class="title">译者</view>
		<input placeholder=""  bindinput="translatorInput"></input>
	</view>
  
  
  	<view class="cu-form-group">
		<view class="title">价格</view>
		<input placeholder=""  bindinput="priceInput"></input>
	</view>
 	<view class="cu-form-group align-start">
		<view class="title">简介</view>
		<textarea maxlength="-1" disabled="{{modalName!=null}}" bindinput="textareaBInput" placeholder="多行文本输入框"  bindinput="briefInput"></textarea>
	</view>

  <view class="padding flex flex-direction">
  <button class="cu-btn bg-red lg" wx:if="{{addBtn}}" bindtap="addShelf">加入书架</button>
   <button class="cu-btn block bg-red margin-tb-sm lg" disabled type="" wx:else>加入书架</button>
  </view>
</form>
 